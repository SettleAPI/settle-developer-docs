          }

          & {
            .request {
              h3 {
                margin-top: -3.1rem;
                padding-top: 4.6rem;
                margin-bottom: 0;
              }
            }
          }

          a {
            color: $textColor;
            font-weight: 600;

            code {
              // color: $textColor;
            }
          }

          h4 {
            .badge {
              font-size: 16px;
            }
          }

          h2 {
            border-bottom: none;
            // display: none;
          }

          & {
            .badge {
              // font-size: 1.35rem;
