@import url('https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;400;500;600;700&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap');

*
  font-family: 'Roboto', sans-serif;

.code-copy
  margin-top: -22px;

@media (max-width: 1582px)
  .global-ui
    display: none;

.guides-sidebar
  .sidebar-group.is-sub-group.depth-1
    .sidebar-heading
      margin-top: 1em;

      span
        font-weight: 500;

footer.copyright
  min-height: 2rem;
  margin-top: 0;
  padding: 2rem;
  overflow: auto;

a.noLink:hover
  text-decoration: none !important;

.rest-resource-summary
  table, th, tr, td
    border: none;
    vertical-align: top;

  thead.custom-component
    display: inline-table;
    margin-top: 1rem;

  tr
    td
      padding-top: 1em;
      padding-bottom: 1em;

    td:first-child
      width: 20%;

.sidebar-group.is-sub-group > .sidebar-heading
  font-weight: 400 !important;
  cursor: pointer !important;
  opacity: 1 !important;

.FiraCode
  font-family: 'Fira Code', monospace;

h1
  .FiraCode
    font-size: 1.65rem;

pre.vue-container
  border-left-width: .5rem;
  border-left-style: solid;
  border-color: #42b983;
  border-radius: 0px;

  & > code
    font-size: 14px !important;

    & > p
      margin: -5px 0 -20px 0;

    code
      background-color: #42b983 !important;
      padding: 3px 5px;
      border-radius: 3px;
      color: #000;

    em
      color: #808080;
      font-weight: light;

table
  display: inline-table;
  width: 100%;

.site-name.can-hide
  display: none;

